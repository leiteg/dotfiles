[user]
	name = Gustavo Leite
	email = gustavoleite.ti@gmail.com
[core]
	editor = vim
	pager = delta
[diff]
	colorMoved = default
[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Dracula
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[interactive]
	diffFilter = delta --color-only
[colors]
	ui = auto
	interactive = auto
[alias]
	# DIFF {{{1
	d        = diff
	r        = diff --staged
	ds       = diff --stat
	wd       = diff --word-diff
	review   = diff --staged
	# STATUS {{{1
	st       = status
	ss       = status --short
	# LOG {{{1
	ls       = log --oneline --graph --all --decorate
	added    = log --follow --diff-filter=A
	overview = "!git log --oneline --reverse main..$1 #"
	# COMMIT & PUSH {{{1
	fuck     = commit --amend --no-edit
	oops     = !git fuck && git push -f
	ignore   = !wget -O- https://www.gitignore.io/api/$@ >> .gitignore
	preview  = !git commit -am \"--- squash ---\" && git push
	# }}}
[push]
	default = matching
[merge]
	tool = vimdiff
[sendemail]
	smtpuser = gustavoleite.ti@gmail.com
	smtpserver = smtp.googlemail.com
	smtpencryption = tls
	smtpserverport = 587
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	verbose = true
[pull]
	ff = only
[init]
	defaultBranch = main
