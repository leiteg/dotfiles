[user]
	name = Gustavo Leite
	email = gustavoleite.ti@gmail.com
[core]
	editor = vim
	#pager = diff-so-fancy | less --tabs=4 -RFX
	pager = delta
[diff]
	colorMoved = default
[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Dracula
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[interactive]
	diffFilter = delta --color-only
[colors]
	ui = auto
	interactive = auto
[alias]
	ls = log --oneline --graph --all --decorate
	dog = log --decorate --oneline --graph
	ld = log --pretty=format:"%C(yellow)%h%Creset\\ %s\\ %C(bold\\ blue)[%an]%Creset\\ %C(red)<%ar>%C(auto)%d"
	ll = !vim +Gitv
	st = status
	ss = status --short
	df = diff
	stat = diff --stat
	review = diff --staged
	word = diff --word-diff
	fuck = commit --amend --no-edit
	oops = !git fuck && git push -f
	ignore = !wget -O- https://www.gitignore.io/api/$@ >> .gitignore
	whatadded = log --follow --diff-filter=A
	preview = !git commit -am \"--- squash ---\" && git push
	fixup = commit --fixup=HEAD
	overview = "!git log --oneline --reverse main..$1 #"
[push]
	default = matching
[merge]
	tool = vimdiff
[sendemail]
	smtpuser = gustavoleite.ti@gmail.com
	smtpserver = smtp.googlemail.com
	smtpencryption = tls
	smtpserverport = 587
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	verbose = true
[pull]
	ff = only
[init]
	defaultBranch = main
